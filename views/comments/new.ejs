<%- include("../partials/header.ejs"); %>
<style>
    #contents{
        padding-top: 20%;
        margin-bottom: 15%;
    }
</style>
<div class="text-center container" id="contents">
    <h1>Create a new comment to <%= plant.name %></h1>
    <div style="width:30%; margin:25px auto;">
        <form action="/plants/<%= plant._id %>/comments" method="post">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="text">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/plants">Go Back</a>
    </div>
</div>

<%- include("../partials/footer.ejs"); %>