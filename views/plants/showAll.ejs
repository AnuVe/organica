    <!-- <h1><%=type%></h1>
    <h1><%=type%></h1> -->
    <%var all=[
    {
        ptype: "tulsi",
        heading: "Tulsi",
        image: "https://cdn.pixabay.com/photo/2021/02/23/10/12/leaves-6042983_960_720.jpg",
        description: "tulsi is good!"
    },
    {
        ptype: "aloevera",
        heading: "Aloe vera",
        image: "https://cdn.pixabay.com/photo/2014/03/02/05/27/aloe-vera-277948__340.jpg",
        description: "aloevera is good!"
    },
    {
        ptype: "curryLeaves",
        heading: "Curry Leaves",
        image: "https://cdn.pixabay.com/photo/2020/04/10/02/50/kaddipatta-5023845_960_720.jpg",
        description: "curryleaves is good!"
    }
] %> 

<% for(var i=0; i<all.length; i++) { 
    if(type===all[i].ptype) {
        break;
    }
} %>
    <div class="container">
            <!-- HTML CARD -->
        <div class="container-fluid">
            <div class="row">
                <div class="col-12 mt-3">
                    <div class="card">
                        <div class="card-horizontal">
                            <div class="img-square-wrapper">
                                <img  src="<%=all[i].image%>" alt="Card image cap" >
                            </div>
                            <div class="card-body">
                                <h2 class="card-title"><%=all[i].heading%></h2>
                                <p class="card-text"><%=all[i].description%></p>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div> 

    </div>
     <% plants.forEach(function(plant){ %>
        <% var type2=plant.plantType %>
        <div>
            <% if(type.toLowerCase()==type2.toLowerCase()) { %>
                <img src="/image/<%=plant.file.filename%>">
                <p>Located in: <%=plant.city%></p>
                <p><%=plant.description %> </p>
                <a href="/plants/<%=plant._id %>">View</a>
            <% } %>
            <hr>
        </div>
    <% }); %>        

